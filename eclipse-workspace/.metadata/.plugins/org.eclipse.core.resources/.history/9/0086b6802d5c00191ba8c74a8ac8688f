package itemBank;

import java.util.Scanner;

public class SectionK {
	// 10
	// mod = 2
	/*	1 2 3 4 5
	 * sum[0] = 0;
	 * sum[1] = 1;		1 % 2 = 1;
	 * sum[2] = 3;		3 % 2 = 1;
	 * sum[3] = 6;		6 % 2 = 0;
	 * sum[4] = 10;		10 % 2 = 0;
	 * sum[5] = 15;		15 % 2 = 1;
	 * 	对前1个数的和取模， 为1        之前有0个前缀和取模后为1，个数+0
　　		对前2个数的和取模， 为1        之前有1个前缀和取模后为1，个数+1
　　		对前3个数的和取模， 为0        之前有0个前缀和取模后为0, 个数+0
　　		对前4个数的和取模， 为0        之前有1个前缀和取模后为0，个数+1
　　		对钱5个数的和取模， 为1        之前有2个前缀和取模后为1，个数+2
	 */
	static int counter = 0;
	
	public static void main(String[] args) {
		Scanner in = new Scanner(System.in);
		
		int N = in.nextInt();		//接下来有N个数
		int K = in.nextInt();		//对K取余
		int[] data = new int[N];	//区间
		for (int i = 0; i < N; i++) {
			data[i] = in.nextInt();
		}
		
		in.close();
		
		for (int i = 0; i < N; i++) {
			for (int j = i; j < N; j++) {
				int sum = 0;
				for (int k = i; k <= j; k++) {
					sum += data[k];
				}
				if (sum % K == 0) {
					counter++;
				}
			}
		}
		
		System.out.println(counter);
	} 
}
